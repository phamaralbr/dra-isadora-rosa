---
// You can pass props later if needed
import FlowerRight from '../../assets/vectors/flower-right.min.svg';
import FlowerLeft from '../../assets/vectors/flower-left.min.svg';
import VerticalTitle from '../../assets/vectors/isadora-big-vertical-title.min.svg';
import InstaIcon from '../../assets/vectors/instagram.svg';
import WhatsIcon from '../../assets/vectors/whatsapp.svg';
import LattesIcon from '../../assets/vectors/lattes.svg';
import DoctorPhoto from '../../assets/images/isadora-main-nobg-upscayl.png';
import { WHATSAPP_LINK, INSTAGRAM_LINK, LATTES_LINK } from '../../content/constants/links';

const { id } = Astro.props;
---

<section {...id ? { id } : {}} class="scroll-mt-20 relative w-full bg-isaGreen py-16 md:py-24">
  <!-- Decorative Flowers -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <FlowerRight class="absolute -top-5 -right-36 w-[550px] md:-top-5 md:right-0 md:w-[clamp(500px,40vw,1000px)]" />
    <FlowerLeft
      class="absolute -bottom-32 -left-52 w-[650px] md:-bottom-32 md:-left-60 md:w-[clamp(600px,50vw,1000px)]"
    />
  </div>

  <div class="container mx-auto px-6 flex flex-col md:flex-row items-center justify-around gap-10 md:gap-20">
    <!-- Left Content -->
    <div class="flex flex-col items-start z-10 max-w-md">
      <VerticalTitle class="w-80 lg:w-96 mb-6" />

      <!-- Social Icons -->
      <div class="flex items-center gap-4 mb-6">
        <a href={INSTAGRAM_LINK} target="_blank" rel="noopener noreferrer" aria-label="Instagram">
          <InstaIcon class="w-6 h-6 text-offWhite hover:opacity-80 transition" />
        </a>
        <a href={WHATSAPP_LINK} target="_blank" rel="noopener noreferrer" aria-label="WhatsApp">
          <WhatsIcon class="w-6 h-6 text-offWhite hover:opacity-80 transition" />
        </a>
        <a href={LATTES_LINK} aria-label="Lattes">
          <LattesIcon class="w-6 h-6 text-offWhite hover:opacity-80 transition" />
        </a>
      </div>

      <!-- Button -->
      <a
        href={WHATSAPP_LINK}
        target="_blank"
        rel="noopener noreferrer"
        class="btn py-3 px-6 font-semibold shadow-none text-base w-auto bg-offWhite text-isaGreen hover:bg-offWhite/80"
      >
        Agende sua consulta
      </a>
    </div>

    <!-- Doctor Image -->
    <div class="relative w-64 h-64 md:w-96 md:h-96 z-10">
      <img
        src={DoctorPhoto.src}
        alt="Foto da doutora"
        class="absolute left-1/2 -translate-x-1/2
                bottom-[-284px] w-[400px]
                md:bottom-[-370px] md:w-[500px]
                lg:bottom-[-425px] lg:w-[600px]
                xl:bottom-[-453px] xl:w-[650px]
                2xl:bottom-[-550px] 2xl:w-[780px]
                max-w-none z-20 pointer-events-none"
      />
    </div>
  </div>
</section>
