---
import { GraduationCap, School, BookOpenCheck, Stethoscope } from 'lucide-astro';
const { id } = Astro.props;
---

<section {...id ? { id } : {}} class="w-full py-20 bg-offWhite text-isaGreen">
  <div class="container mx-auto px-6 max-w-3xl">
    <h2 class="text-3xl font-sans font-normal text-isaPink text-center mb-12">Formação Acadêmica e Trajetória</h2>

    <div class="relative">
      <!-- Vertical Line — aligned center + faded -->
      <div class="absolute left-[1.5rem] top-0 bottom-0 w-[3px] bg-isaPink-faded rounded-full"></div>

      <div class="space-y-12">
        <!-- ITEM — Graduação -->
        <div class="relative pl-20 text-isaPink">
          <div class="absolute left-0 top-0 w-12 h-12 bg-isaPink-faded rounded-full flex items-center justify-center">
            <School class="w-6 h-6 text-offWhite" />
          </div>

          <h3 class="text-2xl font-sans font-normal mb-1">Graduação em Medicina</h3>
          <p class="font-urbanist text-lg leading-relaxed opacity-90">
            Formação completa em Medicina com sólida base científica e foco em cuidado humano.
          </p>
        </div>

        <!-- ITEM — Pós / Residência -->
        <div class="relative pl-20 text-isaPink">
          <div class="absolute left-0 top-0 w-12 h-12 bg-isaPink-faded rounded-full flex items-center justify-center">
            <GraduationCap class="w-6 h-6 text-offWhite" />
          </div>

          <h3 class="text-2xl font-sans font-normal mb-1">Pós-Graduação / Residência</h3>
          <p class="font-urbanist text-lg leading-relaxed opacity-90">
            Especialização na área de saúde feminina, com prática intensiva e acompanhamento de casos complexos.
          </p>
        </div>

        <!-- ITEM — Cursos Importantes -->
        <div class="relative pl-20 text-isaPink">
          <div class="absolute left-0 top-0 w-12 h-12 bg-isaPink-faded rounded-full flex items-center justify-center">
            <BookOpenCheck class="w-6 h-6 text-offWhite" />
          </div>

          <h3 class="text-2xl font-sans font-normal mb-1">Cursos Complementares</h3>
          <p class="font-urbanist text-lg leading-relaxed opacity-90">
            Aperfeiçoamentos em saúde da mulher, contracepção, climatério, prevenção e atendimento humanizado.
          </p>
        </div>

        <!-- ITEM — Experiência Clínica -->
        <div class="relative pl-20 text-isaPink">
          <div class="absolute left-0 top-0 w-12 h-12 bg-isaPink-faded rounded-full flex items-center justify-center">
            <Stethoscope class="w-6 h-6 text-offWhite" />
          </div>

          <h3 class="text-2xl font-sans font-normal mb-1">Experiência Clínica</h3>
          <p class="font-urbanist text-lg leading-relaxed opacity-90">
            Atuação em consultórios e clínicas com foco em acompanhamento individualizado de pacientes.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
